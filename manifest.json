{
    "manifest_version": 2,
    "name": "PageVocab",
    "icons": {},
    "version": "0.0.1",
    "permissions": ["tabs", "webNavigation", "storage"],

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css":["main/resources/word.css"],
        "js": ["main/js/content.js"]
      }
    ],
    "background": { "scripts": ["main/js/background.js"],  "persistent": false },
     "browser_action": {
      "icons": {},
      "default_popup": "main/resources/popup.html"
    }
  
}
